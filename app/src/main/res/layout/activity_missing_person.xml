<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView tools:context=".ModelActivities.Profile.MissingPersonActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:onClick="back"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:tint="@color/white"
                    tools:ignore="UsingOnClickInXml" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missing Person"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

            </com.google.android.material.appbar.MaterialToolbar>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/circIvUserImage"
                            android:src="@drawable/user"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:id="@+id/txtUserName"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:text="Jhozua Diaz"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:id="@+id/txtCreatedAt"
                                android:textColor="@color/colorLightGrey"
                                android:text="Jun 13"/>
                        </LinearLayout>

<!--                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_option"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btnOption"
                            android:layout_height="wrap_content"/>-->
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/txtMissingName"
                        android:textColor="@color/black"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="Name: Foo Bar"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true"
                            >

                            <ImageView
                                android:id="@+id/ivMissingPicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Height: 5.4 ft"
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Weight: 64 kg"
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtEyes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Eyes: Blue "
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtHair"
                                android:layout_width="@dimen/_170sdp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Hair: Blonde"
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Age: 32 yrs old"
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtSign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="Unique Sign: Esse culpa ipsam et."
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="Important Information: Odio dolorum omnis enim et quo nihil quod cupiditate est est quaerat adipisci."
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtLastSeen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="Last seen: West Oval"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:id="@+id/linLayAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtStatusLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="Status: "
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:paddingBottom="8dp"
                                android:text="Pending"
                                android:textColor="@color/colorGrey"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtAdminMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingBottom="8dp"
                            android:text="Admin Message: Odio dolorum omnis enim et quo nihil quod cupiditate est est quaerat adip"
                            android:textColor="@color/colorGrey"
                            android:textSize="14sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/txtUpdatedAt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingBottom="8dp"
                            android:text="Responded At: "
                            android:textColor="@color/colorGrey"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtCommentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="20dp"
                        android:text="Total of 3 comments"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="12sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#ccc"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerComments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:background="@color/white" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryColor"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtAddComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:hint="Write something"
                        android:inputType="textMultiLine"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnAddComment"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/btn_round"
                        android:onClick="addComment"
                        android:src="@drawable/ic_baseline_insert_comment_24" />

                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>


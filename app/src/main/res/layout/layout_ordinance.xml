<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/cirIvPicture"
                android:src="@drawable/cupang"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="6dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/txtPostName"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/barangay_cupang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:id="@+id/txtOrdinanceCreatedAt"
                    android:textColor="@color/colorLightGrey"
                    android:text="Jun 13"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtOrdinanceNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"

            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="Ordinance No: 9-17672"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/txtOrdinanceTitle"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="IT DID SO INDEED, AND MUCH SOONER THAN SHE HAD HURT THE POOR LITTLE JUROR (IT WAS EXACTLY ONE A-PIECE ALL ROUND. (IT WAS THIS LAST REMARK, 'IT'S A VEGETABLE. IT DOESN'T LOOK LIKE ONE, BUT THE HATTER"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtOrdinanceDateApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="Date Approved: 1992-10-06"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtOrdinanceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="Type: Appropriation"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</androidx.cardview.widget.CardView>
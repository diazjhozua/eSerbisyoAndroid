<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".HomeFragments.Analytics.FeedbackAnalyticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="@string/feedbacks_info"
            android:layout_marginBottom="@dimen/_5sdp"
            tools:targetApi="o" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_medium"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="FEEDBACKS OVERVIEW (THIS YEAR)"
            android:layout_marginBottom="@dimen/_5sdp"
            tools:targetApi="o" />

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_medium"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="TRENDING FEEDBACK TYPES SUBMITTED"
            android:layout_marginBottom="@dimen/_5sdp"
            tools:targetApi="o"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/primaryColor"
            android:text="View your submitted feedbacks" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>